<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#FFFFFF"
    android:label="View Story">

    <Button
        android:id="@+id/add_character_button"
        android:layout_width="130dp"
        android:layout_height="73dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="140dp"
        android:text="New Character"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_event_button"
        android:layout_width="138dp"
        android:layout_height="69dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="32dp"
        android:text="New Event"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/story_title"
        android:layout_width="349dp"
        android:layout_height="83dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:text="Title"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:text="List of Characters:"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_event_button" />

    <Button
        android:id="@+id/view_event_button"
        android:layout_width="336dp"
        android:layout_height="65dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:text="View_Events"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_character_button" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/character_recycler"
        android:layout_width="409dp"
        android:layout_height="363dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</androidx.constraintlayout.widget.ConstraintLayout>