<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/character_name_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewCharacterActivity">

    <TextView
        android:id="@+id/character_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:text="Character Name"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="59dp"
        android:layout_height="375dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:srcCompat="@drawable/stat1dot" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:srcCompat="@drawable/statdot2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:srcCompat="@drawable/statdot3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:srcCompat="@drawable/statdot4" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:srcCompat="@drawable/statdot5" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="88dp"
        android:text="Stats Name:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_name_title" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="250dp"
        android:layout_height="375dp"
        android:layout_marginStart="1dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/stat1_display"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="First Stat:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stat2_display"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Second Stat:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stat3_display"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Third Stat:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stat4_display"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Fourth Stat:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/stat5_display"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Fifth Stat:"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stat_val_layout"
        android:layout_width="100dp"
        android:layout_height="375dp"
        android:layout_marginStart="1dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/linearLayout6"
        app:layout_constraintTop_toTopOf="@+id/linearLayout6">

        <TextView
            android:id="@+id/first_stat_field"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:text="0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/second_stat_field"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:text="0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/third_stat_field"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:text="0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fourth_stat_field"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:text="0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fifth_stat_field"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:paddingStart="10dp"
            android:text="0"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/view_graph_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="View Stat Graph"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/add_stat_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Connect to Event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_name_title" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="103dp"
        android:layout_height="33dp"
        android:layout_marginStart="120dp"
        android:text="Most Recent Value:"
        app:layout_constraintBottom_toBottomOf="@+id/textView14"
        app:layout_constraintStart_toEndOf="@+id/textView14" />

</androidx.constraintlayout.widget.ConstraintLayout>