<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.characterdevelopmenttracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Character Development Tracker"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CharacterDevelopmentTracker">
        <activity
            android:name=".ViewGraphActivity"
            android:exported="false"
            android:label="@string/title_activity_view_graph"
            android:theme="@style/Theme.CharacterDevelopmentTracker.NoActionBar" />
        <activity
            android:name=".AddCharacterActivity"
            android:exported="false"
            android:label="@string/title_activity_add_character"
            android:theme="@style/Theme.CharacterDevelopmentTracker.NoActionBar" />
        <activity
            android:name=".ViewEventActivity"
            android:exported="false"
            android:label="@string/title_activity_view_event"
            android:theme="@style/Theme.CharacterDevelopmentTracker.NoActionBar" />
        <activity
            android:name=".AddEventActivity"
            android:exported="false"
            android:label="@string/title_activity_add_event"
            android:theme="@style/Theme.CharacterDevelopmentTracker.NoActionBar" />
        <activity
            android:name=".ViewStoryActivity"
            android:exported="true"
            android:label="View Story" />
        <activity
            android:name=".AddStoryActivity"
            android:exported="true"
            android:label="New Story"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Story List">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>